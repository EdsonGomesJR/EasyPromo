<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:itemBackground">@color/backgroundColor</item>
    </style>
    
    <style name="ButtonTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="TextViewTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/primaryColor</item>
    </style>

</resources>
